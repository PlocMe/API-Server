<!doctype html>  

<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ --> 
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="{{=T.accepted_language or 'en'}}" class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
   
  <title>{{=response.title or request.application}}</title>
  <meta name="application-name" content="{{=request.application}}" /> 
  <meta name="description" content="Ploc.Me é um jogo para smartphones com Android e equipados com GPS e câmera.">
  <meta name="author" content="Ploc.Me">

  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="{{=URL('static','favicon.ico')}}" type="image/x-icon">
  <link rel="apple-touch-icon" href="{{=URL('static','images/apple-touch-icon.png')}}" type="image/x-icon">

  <!-- CSS : implied media="all" -->
  <link  href="//fonts.googleapis.com/css?family=Ubuntu:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css" >
  <link rel="stylesheet" media="handheld" href="css/handheld.css">
  <link rel="stylesheet" href="{{=URL('static','css/style.css')}}">
   
  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>

</head>

<body>

  <div id="container">
    <header>
      {{block header}}
      <div id="logo" class="replace">Ploc.Me</div>
      {{if auth.is_logged_in():}}
        {{try:}}{{=auth.navbar(prefix=T('Welcome'),action=URL('default','user'))}}{{except:pass}}
        <div style="clear: both;"></div><!-- Clear the divs -->
        <div id="statusbar"><!-- statusbar is menu zone -->
        {{block statusbar}} <!-- this is default statusbar -->
        {{=MENU(response.menu,_class='menu')}}
        <div style="clear: both;"></div><!-- Clear the divs -->   
        {{end}}               
      </div><!-- statusbar -->
      {{else:}}
      <div class="links-access">
        <a href="{{=URL(r=request,args='../user/register')}}">{{=T('Create a free account')}}</a>
        <span>{{=T('Already a member?')}}</span>
        <a href="{{=URL(r=request,args='../user/login')}}">{{=T('Login')}}</a>
      </div>
      {{pass}} 
      
      {{end}}
    </header>
    
    <div id="main">
      {{include}}
    </div>
    
    <footer>
      <a href="http://creativecommons.org/licenses/by-nc-nd/3.0/"  rel="license external"><img alt="Licença Creative Commons" style="border-width:0" src="http://i.creativecommons.org/l/by-nc-nd/3.0/88x31.png" /></a>
      {{=MENU(response.menu,_class='menu-footer')}}
    </footer>
  </div> <!--! end of #container -->


  <!-- Javascript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.js"></script>
  <script type="text/javascript" src="{{=URL('static','js/script.js')}}"></script>
  
  <!--[if lt IE 7 ]>
    <script src="{{=URL('static','js/dd_belatedpng.js')}}"></script>
    <script> DD_belatedPNG.fix('img, .png_bg'); //fix any <img> or .png_bg background-images </script>
  <![endif]-->

    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-20833570-2']);
        _gaq.push(['_trackPageview']);
        
        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</body>
</html>
